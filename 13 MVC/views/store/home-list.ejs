<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Here are our registered homes:
      </h2>
      <ul class="space-y-8">
        <% registeredHomes.forEach(home => { %>
          <li class="bg-gradient-to-r from-pink-100 via-red-100 to-yellow-100 p-6 rounded-2xl shadow-xl flex flex-col sm:flex-row items-center gap-6 hover:scale-105 transition-transform duration-300">
            <img src="<%= home.photoUrl %>" alt="<%= home.houseName %> photo" class="w-32 h-32 object-cover rounded-xl border-4 border-red-200 shadow-md">
            <div class="flex-1">
              <h3 class="text-2xl font-semibold text-red-600 mb-2"><%= home.houseName %></h3>
              <div class="flex flex-wrap gap-4 text-gray-700 mb-2">
                <span class="bg-white/80 px-3 py-1 rounded-lg shadow text-base font-medium">
                  <i class="fas fa-map-marker-alt text-red-400 mr-1"></i>
                  <%= home.location %>
                </span>
                <span class="bg-white/80 px-3 py-1 rounded-lg shadow text-base font-medium">
                  <i class="fas fa-star text-yellow-400 mr-1"></i>
                  Rating: <%= home.rating %>/5
                </span>
                <span class="bg-white/80 px-3 py-1 rounded-lg shadow text-base font-medium">
                  <i class="fas fa-rupee-sign text-green-500 mr-1"></i>
                  â‚¹<%= home.Price %> / night
                </span>
              </div>
            </div>
          </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>